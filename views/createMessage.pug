extends layout

block content
    .nav 
      h1 HomePage 
      a(href='/home') Home
      a(href="/log-out") Log out 
      a(href="/create-message") + Create Message
      a(href='/club-house') Enter Club House

    .card 
      h2 Create a message 
      form(action='/log-in' method='POST')
        label(for='title') Title
        input#title(type='text' placeholder='Title' name='title' required='true' value='')
        input(type='textarea'  placeholder='...' required='true' value='')
        button(type='submit') Submit
    if (errors)
      p #{errors}